declare sub Clr Cscale
include "RdYlBl.gle"
include "ClrOld.gle"
include "MaxMin.gle"
include "ColorLegenda.gle"

sub Clr Cscale
  !RdYlBl(Cscale)
  ClrOld(Cscale)

   xlabels off
   yaxis min 0 max +180 nofirst
   y2axis min 0 max 1 nofirst
   let d9=90
   d9 line lstyle 1 lwidth 0.01 color blue
   data dfileang$ d41=c1,c8  d42=c1,c10 
   d41 marker dot  msize DotSz err d42 errwidth .1  color crimson

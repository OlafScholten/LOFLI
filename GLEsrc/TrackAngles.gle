file$='files/T-4b-D1-Z1a'
if(nargs() > 0 ) then 
    file$=arg$(1)
end if
dfileang$=file$+'Angls1.dat'
filedat$=file$+'.dat'
fopen filedat$ inchan read
freadln inchan xMin xMax yMin yMax zMin zMax tMin tMax ZmBx$
